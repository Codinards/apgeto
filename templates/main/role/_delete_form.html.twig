<form method="post" action="{{ path('app_backend_user_action_delete', {id: role.id, _locale: locales.locale}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline-block;">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ role.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>
