{% extends "base.html.twig" %}

{% block title %}
    Reconduction Prêt {{ debt.user }}
{% endblock %}

{% block pageTitle %}
    <h1>Reconduction Prêt {{ debt.user }}</h1>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card bg-edit">
            {{ form_start(form) }}
                <div class="card-header text-center">
                    {# <h3 class="card-title">Reconduction Prêt</h3> #}
                    <p class="text-chocolate">
                        {% if debt.renewalAt is not null %}
                        Dernière reconduction: <span class="text-purple">{{debt.renewalAt | in_locale("ll") }}</span><hr/>
                        {% endif %}
                        Solde prêt : <span class="text-purple">{{ debt.account.loanBalances | money_format }}</span>
                        | Solde fond : <span class="text-purple">{{ debt.account.cashBalances | money_format }}</span>
                    </p>
                </div>
                <div class="card-body bg-save">
                    {{ form_widget(form) }}
                </div>
                <div class="card-footer">
                    <div class="form-group text-right">
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}