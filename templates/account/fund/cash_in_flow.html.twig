{% extends "base.html.twig" %}

{% block title %}
    {{ __t('cash_in_flow') }}
{% endblock title %}

{% block pageTitle %}
    <h1>{{ __t('cash_in_flow') }} | <span class="text-success">{{ user.name }}</span></h1>
{% endblock pageTitle %}

{% block body %}

<div class="row font-size-8">
    <div class="col-md-12 text-right">
        {{ create_link('app_backend_account_index', __('account.index'), {_locale: locales.locale}, {class: 'btn btn-primary'} ) }}
        {{ create_link('app_backend_fund_show', __('fund.show'), {'id': user.id, _locale: locales.locale}, {class: 'btn btn-show'} ) }}
        {{ create_link('app_backend_user_show', __('profil'), {'id': user.id, _locale: locales.locale}, {class: 'btn btn-info'} ) }}
    </div>
</div>
<hr>

<div class="row">
    <div class="col-md-8 mx-auto">
    <h3 class="text-center m-1"><span class="alert alert-info">Solde Fond: {{ user.account.cashBalances | money_format }}</span></h3>

        {{ include(viewPath ~ '_form.html.twig', {button_label : "Enregistrer"}) }}
    </div>
</div>
    
{% endblock body %}